//Bouw een count down klok voor me, het moet een klok zijn die bestaat uit dagen, uren, minuten en seconden. De countdown waar de klok naar toe moet is kerstavond. Dus 24 december om 00:00 Amsterdam tijd. De klok moet live aftellen naar dat moment

<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Countdown naar Kerstavond</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@700&family=Pacifico&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background: linear-gradient(to bottom, #0b3d91, #ffffff); /* Kerstblauw naar wit */
            color: #fff;
            overflow: hidden;
        }
        #countdown {
            text-align: center;
            background: rgba(255, 255, 255, 0.2);
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
            backdrop-filter: blur(10px);
            position: relative;
            z-index: 1;
        }
        h1 {
            font-family: 'Pacifico', cursive;
            color: #ff0000; /* Rood voor Kerst */
            font-size: 2.5em;
            margin-bottom: 20px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }
        .time-unit {
            display: inline-block;
            margin: 15px;
            font-size: 3em;
            background: #228b22; /* Groen voor Kerst */
            padding: 15px 25px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease;
        }
        .time-unit:hover {
            transform: scale(1.1);
        }
        .label {
            display: block;
            font-size: 0.4em;
            text-transform: uppercase;
            color: #fff;
            margin-top: 5px;
        }
        /* Sneeuwval animatie */
        .snowflake {
            position: absolute;
            top: -10px;
            color: #fff;
            font-size: 1.5em;
            animation: fall linear infinite;
        }
        @keyframes fall {
            to {
                transform: translateY(100vh);
            }
        }
    </style>
</head>
<body>
    <div id="countdown">
        <h1>Countdown naar Kerstavond (24 december 00:00 Amsterdam tijd)</h1>
        <div class="time-unit"><span id="days">0</span><span class="label">Dagen</span></div>
        <div class="time-unit"><span id="hours">0</span><span class="label">Uren</span></div>
        <div class="time-unit"><span id="minutes">0</span><span class="label">Minuten</span></div>
        <div class="time-unit"><span id="seconds">0</span><span class="label">Seconden</span></div>
    </div>

    <script>
        // Stel de doel datum in: 24 december van het huidige jaar, 00:00 in Amsterdam tijdzone
        const targetDate = new Date('December 24, 2025 00:00:00 GMT+0100'); // CET (UTC+1) voor december

        function updateCountdown() {
            const now = new Date();
            const difference = targetDate - now;

            if (difference > 0) {
                const days = Math.floor(difference / (1000 * 60 * 60 * 24));
                const hours = Math.floor((difference % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((difference % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((difference % (1000 * 60)) / 1000);

                document.getElementById('days').textContent = days;
                document.getElementById('hours').textContent = hours;
                document.getElementById('minutes').textContent = minutes;
                document.getElementById('seconds').textContent = seconds;
            } else {
                document.getElementById('countdown').innerHTML = '<h1>Het is Kerstavond! ðŸŽ„</h1>';
            }
        }

        // Update elke seconde
        setInterval(updateCountdown, 1000);
        updateCountdown(); // Eerste update

        // Sneeuwval creÃ«ren
        function createSnowflake() {
            const snowflake = document.createElement('div');
            snowflake.classList.add('snowflake');
            snowflake.textContent = 'â„';
            snowflake.style.left = Math.random() * 100 + 'vw';
            snowflake.style.animationDuration = Math.random() * 3 + 5 + 's'; // 5-8 seconden
            snowflake.style.opacity = Math.random() * 0.5 + 0.3;
            document.body.appendChild(snowflake);

            setTimeout(() => {
                snowflake.remove();
            }, 8000);
        }

        setInterval(createSnowflake, 200);
    </script>
</body>
</html>
